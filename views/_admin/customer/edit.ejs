<%- include ('../section/header') -%>



<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Edit User</a></li>
            </ol>
        </div>
    </div>

    <!-- row -->

    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-validation">
                                <form class="form-valide" method="post">
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="val-firstName"> First Name<span
                                                class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="text" value="<%= customerValues.input_first_name %>" name="first_name" class="form-control">


                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="val-lastName"> Last Name<span
                                                class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="text" value="<%= customerValues.input_last_name %>" name="last_name" class="form-control">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="val-username">Username <span
                                                class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="text" class="form-control" id="val-username" name="user_name"
                                                value="<%= customerValues.input_username %>">
                                         </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="val-email">Email <span
                                                class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input disabled type="text" class="form-control" id="val-email" 
                                                value="<%= customerValues.input_email %>">
                                           </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="val-phoneus">Phone Number
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="text" disabled class="form-control" id="val-phoneus" 
                                                value="<%= customerValues.input_phone_number %>">
                                         </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="val-phoneus">Account Type
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-1">
                                        <select name="account_type" style:width="100px">
                                            <option disabled selected>-- Select Account Type -- </option>
                                           <% AccountTy.forEach(function(fetchAccountTyp) { %>
                                            <option name="account_type" value="<%= fetchAccountTyp.id %>"><%= fetchAccountTyp.account_name %></option>
                                           <% }) %>
                                        </select><hr> 
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-lg-8 ml-auto">
                                            <button type="submit" class="btn btn-primary w-75">Confirm</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #/ container -->

</div>
<!-- #/ container -->
</div>
<!--**********************************
            Content body end
        ***********************************-->

        <%- include ('../section/footer') -%>